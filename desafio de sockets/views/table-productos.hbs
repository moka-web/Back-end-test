<div class="mt-4 container">
  <h1 class="text-center fw-bold mb-4">Listado de productos</h1>

   <a href="/api/carrito/">carrito</a>
   <a href="/">home</a>
   <h1 style="color: white;">{{sanitizedUser.cart_id}}</h1>

  <div class="row">
    <tbody >
       {{#each productos}}
          <div class="card col-md-4" style="width: 18rem; margin:1rem;">
            <img class="card-img-top" src={{this.photo_url}} alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <h5 class="card-title">{{this.price}}</h5>
                <p class="card-text">{{this.description}}</p>
                <form action="/api/carrito/{{../sanitizedUser.cart_id}}/productos/{{this._id}}" method="post">
                  <button type="submit" class="btn btn-primary btn-sm" >Comprar</button>
                </form>
            </div>
          </div>
      {{/each}}
    </tbody>
    </table>
  </div>  
</div>
